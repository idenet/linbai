.search-list {
  position: fixed;
	top: 108rpx;
	bottom: 0;
  width: 100%;
}

.list-item {
  display: flex;
  height: 140rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.list-item:last-child {
  border: none;
}
.icon {
  flex: 0 0 60rpx;
  width: 60rpx;
  height: 80rpx;
  margin: 30rpx 0 30rpx 30rpx;
}

.icon-image {
  width: 100%;
  height: 100%;
}
.book-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.book-title {
  font-size: 27rpx;
  color: #010101;
}
.book-author {
  font-size: 19rpx;
  color: #999999;
  margin-top: 20rpx;
}
