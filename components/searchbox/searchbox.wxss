.text {
	width: 167rpx;
	height: 27rpx;
	font-size: 28rpx;
	line-height: 15rpx;
	color: #999999;
	left: 218rpx;
}

.text-none {
	display: none;
}

/* slot */

.button {
	flex: 0 0 120rpx;
	width: 120rpx;
	height: 68rpx;
	padding: 0;
	margin: 0;
	font-size: 28rpx;
	color: #666666;
	border-radius: 34rpx;
	border: 1rpx solid #666666;
	text-align: center;
	line-height: 68rpx;
	font-weight: 300;
}
