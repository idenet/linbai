.header {
	display: flex;
	box-sizing: border-box;
	width: 100%;
	height: 108rpx;
	justify-content: space-around;
	align-items: center;
	box-shadow: 0px 2px 10px 0px rgba(203, 203, 203, 0.1);
}

.header-input {
	position: relative;
}

.search {
	box-sizing: border-box;
	width: 690rpx;
  height: 68rpx;
  font-size: 28rpx;
	background-color: #f7f7f7;
	border-radius: 34rpx;
	padding-left: 60rpx;
	color: #999999;
}
/* focus 下的search */
.search-small {
	box-sizing: border-box;
	width: 540rpx;
  height: 68rpx;
  font-size: 28rpx;
	background-color: #f7f7f7;
	border-radius: 34rpx;
	padding-left: 60rpx;
	color: #999999;
}

.icon {
	position: absolute;
	top: 20rpx;
	left: 240rpx;
	z-index: 10;
	color: #999999;
}

.icon-focus {
	position: absolute;
	z-index: 10;
	color: #999999;
	top: 20rpx;
	left: 30rpx;
}

