.header {
	display: flex;
	position: relative;
	box-sizing: border-box;
	width: 100%;
	height: 108rpx;
	justify-content: center;
	align-items: center;
	box-shadow: 0px 2px 10px 0px rgba(203, 203, 203, 0.1);
}

.search {
	box-sizing: border-box;
	width: 690rpx;
	height: 68rpx;
	background-color: #f7f7f7;
	border-radius: 34rpx;
	padding-left: 60rpx;
	color: #999999;
}

.icon {
	position: absolute;
	z-index: 10;
	color: #999999;
	left: 270rpx;
}

.icon-focus {
	position: absolute;
	z-index: 10;
	color: #999999;
	left: 60rpx;
}

