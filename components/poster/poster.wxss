/* 下半阙 */
.poster {
	position: relative;
	width: 100%;
	height: 500rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.poster-image {
	width: 100%;
	height: 100%;
}

/* 音乐图 */
.poster-image-music {
	width: 420rpx;
	height: 420rpx;
	border-radius: 100%;
}

.music-cd {
	position: absolute;
	width: 100rpx;
	height: 100rpx;
	top: 50%;
	left: 50%;
	transform: translate3d(-50%, -50%, 0);
	z-index: 10;
}
/* 竖着的图片 */
.image {
	position: relative;
	width: 46rpx;
	height: 150rpx;
	left: 30rpx;
	bottom: 64rpx;
}

.content {
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
	bottom: 56rpx;
	width: 558rpx;
	margin: 0 96rpx;
	color: #0f0f0f;
	font-size: 34rpx;
	line-height: 50rpx;
	font-weight: 300;
}

