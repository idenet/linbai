<view class="container">
  <search-box bind:focus="onFocus" 
              bind:blur="onBlur" 
              bind:onInput="input" 
              showWitch="{{showWitch}}"
              inputValue="{{value}}"
              cancel="{{cancel}}"
  ></search-box>
  <block wx:if="{{showWitch === 1}}">
    <scroll-view scroll-y="{{true}}" class="books-list">
      <view class="title">
        <image src="../../assets/book/精选@2x.png" class="title-image" />
      </view>
      <view class="book">
        <view wx:for="{{books}}" wx:key="{{id}}" class="book-item">
          <image src="{{item.image}}" class="book-image" mode="top center" data-id="{{item.id}}" bind:tap="tapBookDetails" />
          <view class="book-text">
            <text class="book-name">{{item.title}}</text>
            <text class="book-author">{{item.author}}</text>
            <text class="book-favNums">{{item.fav_nums}} 喜欢</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </block>
  <block wx:elif="{{showWitch === 2}}">
    <view class="hot-search">
      <view class="hot-title">
        <text class="hot-title-text">历史搜索</text>
      </view>
      <view class="hot-word">
        <text wx:for="{{historyKey}}" wx:key="{{*this}}" class="hot-item">{{item}}</text>
      </view>
    </view>
    <view class="hot-search">
      <view class="hot-title">
        <text class="hot-title-text">热门搜索</text>
      </view>
      <view class="hot-word">
        <text wx:for="{{hotWord}}" wx:key="{{*this}}" class="hot-item">{{item}}</text>
      </view>
    </view>
  </block>
  <block wx:else>
    <view class="search-list">
      <text class="item">123</text>
    </view>
  </block>
</view>