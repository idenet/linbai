.bg-image {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	bottom: 0;
	z-index: -1;
}

.avatar-border {
	display: flex;
	width: 180rpx;
	height: 180rpx;
	border-radius: 50%;
	border: 1rpx solid #ffffff;
	justify-content: center;
	align-items: center;
	margin: 163rpx 288rpx 0 282rpx;
}

.avatar {
	width: 140rpx;
	height: 140rpx;
	border-radius: 50%;
}

.content {
	margin-top: 392rpx;
	font-size: 24rpx;
	color: #ffffff;
	transform: rotate(90deg);
}

.text {
	position: absolute;
	bottom: 60rpx;
	left: 30rpx;
	color: #ffffff;
}

.text-name {
	display: inline-block;
	font-size: 34rpx;
	margin-bottom: 20rpx;
}

.block {
	width: 476rpx;
	border-top: 1rpx solid #ffffff;
}

.desc {
	display: flex;
	align-items: center;
	margin-top: 20rpx;
	height: 20rpx;
	border-left: 6rpx solid #ffffff;
}

.desc-me {
	font-size: 24rpx;
	margin-left: 20rpx;
}
